<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical" android:layout_gravity="center" android:gravity="center">
    <ImageView
        android:id="@+id/actionbar_item_image"
        android:src="@drawable/navicloud_and_443a" android:layout_gravity="center" android:layout_height="25dip" android:layout_width="25dip"/>

    <TextView
        android:id="@+id/actionbar_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Text" android:layout_centerHorizontal="true" style="@style/Style.Text.Text.IconTextBlue" android:layout_centerVertical="true" android:layout_gravity="center"/>
</LinearLayout>