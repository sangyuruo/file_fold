<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:scrollbars="vertical" android:background="@drawable/navicloud_and_749a">
    
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent" 
     android:orientation="vertical">
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="66dip"
         android:background="@drawable/navicloud_and_652a"
         android:orientation="horizontal"
         >  
         <EditText
                android:id="@+id/adt_Auth_Change_old_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dip"
                android:password="true"
                android:hint="@string/STR_MM_06_02_04_02"
                android:textColorHint="#FF0890CA"
               android:layout_gravity="center_vertical" android:layout_marginLeft="12dip" android:layout_marginRight="8dip" android:layout_weight="1">

            </EditText>
             <TextView
                   android:id="@+id/adt_Auth_Change_old_error_tip_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="21dip"
                   android:textColor="@color/red"
                   android:text="！" android:layout_gravity="center_vertical" android:layout_marginRight="7dip"/>
     </LinearLayout>
          <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="66dip"
         android:background="@drawable/navicloud_and_652a"
         android:orientation="horizontal"
         >  
         <EditText
                android:id="@+id/adt_Auth_Change_new_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dip"
                android:password="true"
                android:hint="@string/STR_MM_06_02_04_03"
                android:textColorHint="#FF0890CA"
                android:layout_gravity="center_vertical" android:layout_marginLeft="12dip" android:layout_marginRight="8dip" android:layout_weight="1">

            </EditText>
             <TextView
                   android:id="@+id/adt_Auth_Change_new_error_tip_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="21dip"
                   android:textColor="@color/red"
                   android:text="！" android:layout_gravity="center_vertical" android:layout_marginRight="7dip"/>
     </LinearLayout>
     
                    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="66dip"
         android:background="@drawable/navicloud_and_652a"
         android:orientation="horizontal"
         >  
         <EditText
                android:id="@+id/adt_Auth_Change_confirm_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dip"
                android:password="true"
                android:hint="@string/STR_MM_09_02_02_26"
                android:textColorHint="#FF0890CA"
                android:layout_gravity="center_vertical" android:layout_marginLeft="12dip" android:layout_marginRight="8dip" android:layout_weight="1">
            </EditText>
             <TextView
                   android:id="@+id/adt_Auth_Change_confirm_error_tip_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="21dip"
                   android:textColor="@color/red"
                   android:text="！" android:layout_gravity="center_vertical" android:layout_marginRight="7dip"/>
     </LinearLayout>
         <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >
             <TextView 
                 android:id="@+id/change_main_tip"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="16dip"
                 android:textColor="@color/red"
                 android:layout_gravity="center_vertical" android:layout_marginLeft="10dip"/>
             </LinearLayout>
   </LinearLayout>

</ScrollView>