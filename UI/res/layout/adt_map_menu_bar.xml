<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<com.billionav.navi.component.mapcomponent.BottomBar
		android:id="@+id/map_bottom_area"
		android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
		android:layout_width="361dip" android:layout_height="54dip"/>
<LinearLayout
        android:id="@+id/map_layer_menu"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/navicloud_and_701a" android:clickable="true">

        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1" 
            android:background="@xml/adt_map_layer_menu_middle_seletor">
			
	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="89dip"
	            android:layout_height="20dip"
	             android:gravity="center"
	            android:text="@string/STR_COM_011" android:layout_alignParentBottom="true" android:layout_marginBottom="4dip" android:layout_centerHorizontal="true" style="@style/Style.Text.Text.IconTextBlue"/>

	        <ImageView
	            android:id="@+id/map_layer_menu_report"
	            android:layout_width="89dip"
	            android:layout_height="54dip"
	            android:layout_marginTop="1dip"
	            android:src="@drawable/navicloud_and_409a" android:layout_centerHorizontal="true"/>
		
        </RelativeLayout>
    
	    <RelativeLayout 
	        android:layout_width="match_parent" 
	        android:layout_height="match_parent" 
	        android:layout_weight="1"
	        android:background="@xml/adt_map_layer_menu_middle_seletor">
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="89dip"
	            android:layout_height="20dip"
	             android:gravity="center"
	            android:text="@string/STR_MM_01_01_01_02" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true" android:layout_marginBottom="4dip" style="@style/Style.Text.Text.IconTextBlue"/>

	        <ImageView
	            android:id="@+id/map_layer_map_layers"
	            android:layout_width="89dip"
	            android:layout_height="54dip"
	            android:layout_marginTop="1dip"
	            android:src="@drawable/navicloud_and_406a" android:layout_centerHorizontal="true"/>
	        </RelativeLayout>


        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1" 
            android:background="@xml/adt_map_layer_menu_right_seletor">
	        <TextView
	            android:id="@+id/textView4"
	            android:layout_width="89dip"
	            android:layout_height="20dip"
	             android:gravity="center"
	            android:text="@string/STR_MM_01_01_01_03" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true" android:layout_marginBottom="4dip" style="@style/Style.Text.Text.IconTextBlue"/>

	        <ImageView
	            android:id="@+id/map_layer_menu_nearby_search"
	            android:layout_width="89dip"
	            android:layout_height="54dip"
	            android:layout_marginTop="1dip"
	            android:src="@drawable/navicloud_and_407a" android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1" 
            android:background="@xml/adt_map_layer_menu_right_seletor">
		        <TextView
		            android:id="@+id/textView5"
		            android:layout_width="89dip"
		            android:layout_height="20dip"
		            android:gravity="center"
		            android:text="@string/STR_MM_01_01_01_04" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true" android:layout_marginBottom="4dip" style="@style/Style.Text.Text.IconTextBlue"/>
	
		        <ImageView
		            android:id="@+id/map_layer_menu_more"
		            android:layout_width="89dip"
		            android:layout_height="54dip"
		            android:layout_marginTop="1dip"
		            android:src="@drawable/navicloud_and_408a" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        
    </LinearLayout>

<com.billionav.navi.component.mapcomponent.ButtonMapZoom
    android:id="@+id/button_map_zoom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
     >
</com.billionav.navi.component.mapcomponent.ButtonMapZoom>

</RelativeLayout>