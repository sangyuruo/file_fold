<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
   android:background="@drawable/navicloud_and_749a" android:scrollbars="none">
<LinearLayout 
    android:orientation="vertical"
    android:id="@+id/detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="16dip" android:layout_marginRight="16dip" android:layout_marginTop="16dip">
        <TextView 
            android:id="@+id/report_content_title"
            android:layout_height="wrap_content"
            android:layout_width="120dip"
            android:textColor="#FF336699"
            android:textSize="21dip"
            android:text="@string/STR_MM_08_05_01_14"/>
        <ImageView 
            android:layout_height="32dip"
            android:layout_width="32dip"
            android:id="@+id/report_content_icon"
            android:layout_toRightOf="@id/report_content_title" />
        <TextView 
            android:id="@+id/report_content"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="21dip"
            android:textColor="#FF6E6E6E"
            android:layout_toRightOf="@id/report_content_icon"
            android:text="" android:layout_marginLeft="10dip"/>
    </RelativeLayout>
      <RelativeLayout 
          android:id="@+id/severity_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="16dip" android:layout_marginRight="16dip" android:layout_marginTop="16dip">
       
        <TextView 
            android:id="@+id/severity_title"
            android:layout_height="wrap_content"
            android:layout_width="120dip"
            android:textSize="21dip"
            android:textColor="#FF336699"
            android:text="@string/STR_MM_08_05_01_15"/>
           <TextView 
            android:id="@+id/severity"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#FF6E6E6E"
            android:layout_toRightOf="@id/severity_title"
            android:textSize="21dip"
            android:text=""/>
    </RelativeLayout>
         <RelativeLayout 
 
        android:id="@+id/position_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="16dip" android:layout_marginRight="16dip" android:layout_marginTop="16dip">
       
        <TextView 
            android:id="@+id/position_title"
            android:layout_height="wrap_content"
            android:layout_width="120dip"
            android:textSize="21dip"
            android:textColor="#FF336699"
            android:text="@string/STR_MM_08_05_01_40"/>
           <TextView 
            android:id="@+id/position"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#FF6E6E6E"
            android:layout_toRightOf="@id/position_title"
            android:textSize="21dip"
            android:text=""/>
    </RelativeLayout>
          <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="16dip" android:layout_marginRight="16dip" android:layout_marginTop="16dip">
        <TextView 
            android:id="@+id/time_title"
            android:layout_height="wrap_content"
            android:layout_width="120dip"
            android:textSize="21dip"
            android:textColor="#FF336699"
            android:text="@string/STR_MM_08_05_01_17"/>
        <TextView 
            android:id="@+id/time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/time_title"
            android:textSize="21dip"
            android:textColor="#FF6E6E6E"/>
    </RelativeLayout>
            <RelativeLayout 
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="16dip" android:layout_marginRight="16dip" android:layout_marginTop="16dip">
        <TextView 
            android:id="@+id/info_title"
            android:layout_height="wrap_content"
            android:layout_width="120dip"
            android:textSize="21dip"
            android:textColor="#FF336699"
            android:text="@string/STR_MM_08_05_01_18"/>
         <TextView 
            android:id="@+id/info"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/info_title"
            android:textSize="21dip"
            android:textColor="#FF6E6E6E"/>
    </RelativeLayout>
            <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="16dip" android:layout_marginRight="16dip" android:layout_marginTop="16dip">
        <TextView 
            android:id="@+id/source_title"
            android:layout_height="wrap_content"
            android:layout_width="120dip"
            android:textSize="21dip"
            android:textColor="#FF336699"
            android:text="@string/STR_MM_08_05_01_19"/>
       <TextView 
            android:id="@+id/source"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="21dip"
            android:textColor="#FF6E6E6E"
            android:layout_toRightOf="@id/source_title"
            android:text=""/>
    </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/pic_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="16dip" android:layout_marginRight="16dip" android:layout_marginTop="16dip">
        <TextView 
            android:id="@+id/pic_title"
            android:layout_height="wrap_content"
            android:layout_width="120dip"
            android:textSize="21dip"
            android:textColor="#FF336699"
            android:text="@string/STR_MM_08_05_01_20"/>
        <ImageView 
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_below="@id/pic_title"
            android:layout_marginTop="10dip" android:scaleType="fitXY" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    </LinearLayout>
</ScrollView>
