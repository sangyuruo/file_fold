<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_Layout"
    android:background="@drawable/navicloud_and_517a" 
    android:paddingLeft="7dip" 
    android:paddingRight="7dip" 
    android:paddingTop="7dip" android:paddingBottom="7dip">
    <com.billionav.navi.naviscreen.misc.VoiceHelperView
        android:id="@+id/microphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"/>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_above="@id/microphone" android:layout_marginBottom="7dip">

        <ScrollView
            android:id="@+id/record_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip">

            <LinearLayout
                android:id="@+id/record_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>
