<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:gravity="center" 
	android:layout_width="match_parent" android:layout_height="78dip"
	
	android:layout_toLeftOf="@+id/list_Item_Guide_Poi_image02"
	android:background="@xml/list_ar_list_background_selector">
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" >
		<TextView android:id="@+id/tv_num" android:layout_height="wrap_content"
			android:layout_width="wrap_content" style="@style/Style.Text.Text.ListItemText"
			android:layout_centerVertical="true" android:layout_marginLeft="15dip" 
			android:layout_marginRight="10dip"/>
		<TextView android:id="@+id/list_Item_Guide_Poi_text01"
			android:ellipsize="end" android:singleLine="true"
			android:layout_height="wrap_content" android:text="TextView01"
			android:layout_width="wrap_content" style="@style/Style.Text.Text.ListItemText" />
		<TextView android:id="@+id/list_Item_Guide_Poi_text03"
			android:layout_marginRight="10dip"
			android:layout_height="wrap_content" android:text="TextView03"
			android:gravity="right"
			style="@style/Style.Text.Text.ListItemSubText" android:layout_width="fill_parent"
			android:singleLine="true" android:ellipsize="end" />


	</LinearLayout>

	<TextView android:id="@+id/list_Item_Guide_Poi_text02"
		android:layout_height="wrap_content" android:text="TextView02"
		android:layout_marginLeft="30dip"
		android:layout_marginRight="10dip"
		style="@style/Style.Text.Text.ListItemSubText" android:layout_width="match_parent"
		android:singleLine="true" android:ellipsize="end" />


</LinearLayout>

