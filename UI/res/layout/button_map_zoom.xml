<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:clickable="true">

    <ImageView
        android:id="@+id/map_button_zoom_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/btn_zoom_in" android:scaleType="center"/>

    <ImageView
        android:id="@+id/map_button_zoom_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/map_button_zoom_in"
        android:layout_marginTop="3dip"
        android:src="@drawable/btn_zoom_out" android:scaleType="center"/>

</RelativeLayout>