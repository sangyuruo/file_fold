<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dip"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/navicloud_and_534a" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:background="@xml/dialog_clutch_button_selector" android:scaleType="center"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="TextView" android:layout_gravity="center_vertical" android:layout_marginLeft="8dp" android:layout_marginRight="2dp" android:gravity="right" android:textSize="20dp" android:textColor="#ff18a8e8"/>

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="TextView" android:layout_gravity="center_vertical" android:layout_marginLeft="2dp" android:layout_marginRight="8dp" android:gravity="bottom" android:textSize="20dp" android:textColor="#ff828282"/>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/navicloud_and_535a" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:background="@xml/dialog_clutch_button_selector" android:scaleType="center"/>

    </RelativeLayout>

</LinearLayout>