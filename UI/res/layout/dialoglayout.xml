<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:id="@layout/dialoglayout" android:layout_height="wrap_content">
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/titlelayout" android:layout_width="fill_parent">
        <TextView android:gravity="left|center_vertical" android:layout_width="fill_parent" android:id="@+id/titleContent" android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <ScrollView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/messagelayout">
        <TextView android:layout_width="match_parent" android:id="@+id/messageContent" android:layout_height="wrap_content"></TextView>
    </ScrollView>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/viewlayout"></RelativeLayout>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/buttonlayout" android:layout_height="wrap_content">
        <Button android:text="Button" android:layout_height="42dip" android:id="@+id/positive" android:layout_width="fill_parent"></Button>
        <Button android:text="Button" android:layout_height="42dip" android:id="@+id/natural" android:layout_width="fill_parent"></Button>
        <Button android:text="Button" android:layout_height="42dip" android:id="@+id/negative" android:layout_width="fill_parent"></Button>
    </LinearLayout>
</LinearLayout>
