<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78dip"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
       	android:layout_marginLeft="12dip"
        android:orientation="vertical" android:layout_alignParentTop="true" android:layout_width="match_parent" android:paddingTop="7dip" android:paddingBottom="7dip"  android:layout_toLeftOf="@+id/list_Item_Guide_Poi_image02" android:layout_marginRight="12dip">

        <TextView
            android:id="@+id/list_Item_Guide_Poi_text01"
            android:ellipsize = "end"
            android:singleLine="true"
            android:layout_height="wrap_content"
             style="@style/Style.Text.Text.ListItemText"
            android:text="TextView01" android:layout_width="fill_parent"/>

        <TextView
            android:id="@+id/list_Item_Guide_Poi_text02"
            android:layout_height="wrap_content"
            android:text="TextView02"  style="@style/Style.Text.Text.ListItemSubText" android:layout_width="fill_parent" 
            android:layout_marginRight="40dip" android:singleLine="true" android:ellipsize="end"/>

        <TextView
            android:id="@+id/list_Item_Guide_Poi_text03"
            android:layout_height="wrap_content"
            android:text="TextView03"  style="@style/Style.Text.Text.ListItemSubText" android:layout_width="fill_parent"
            android:singleLine="true" android:ellipsize="end"/>
    </LinearLayout>
    
    <ImageView
 		android:id="@+id/list_Item_favorite_CheckBoxImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY" 
        android:layout_marginLeft="0dip" 
        android:src="@drawable/navicloud_and_505a"
 		android:layout_centerVertical="true" android:layout_marginRight="6dip"
 		android:focusable="false"
 		/>
		
</RelativeLayout>
