<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent" android:layout_width="match_parent"
	android:background="@drawable/navicloud_and_713a"
	android:layout_alignParentLeft="true"
	android:id="@+id/gib_turning_layout">
	<ImageView android:id="@+id/gib_turning_arrow"
		android:layout_height="55dip" android:layout_width="64dip"
		android:layout_alignParentTop="true" android:layout_marginTop="0dip"
		android:src="@drawable/navicloud_and_077a_01" android:scaleType="fitXY"
		android:layout_marginLeft="15dip"
		android:layout_centerHorizontal="true"/>
	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="30dip"
		android:layout_centerInParent="true"
		android:layout_below="@id/gib_turning_arrow"
		android:id="@+id/gib_distance">
	<TextView 
		android:id="@+id/gib_distance_unit"
		android:textColor="@color/white"
		android:layout_width="26dip" android:gravity="bottom"
		android:textSize="14dip" android:text="km"
		android:ellipsize="end" 
		android:paddingBottom="2dip"
		android:layout_alignParentRight="true" 
		android:layout_alignParentBottom="true"
		 android:layout_height="22dip"/>
	<TextView 
		android:id="@+id/gib_distance_num"
		android:layout_toLeftOf="@id/gib_distance_unit"
		android:textColor="@color/white"
		android:layout_alignParentBottom="true" android:layout_height="22dip"
		android:layout_width="match_parent" android:textSize="20dip" android:text="99.9"
		android:ellipsize="end"
		android:gravity="bottom|right"/>
</RelativeLayout>
</RelativeLayout>
