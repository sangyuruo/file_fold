<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/linearlayour01"
       android:layout_width="match_parent"
       android:layout_height="67dip"
       android:orientation="vertical"
       android:layout_centerVertical="true"
       android:background="@drawable/list_selector_background"
       android:padding="10dip">

       <TextView
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="TextView01" style="@style/Style.Text.Text.ListItemText" android:layout_weight="1" android:gravity="bottom"/>
       <TextView
           android:id="@+id/address"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="TextView02" style="@style/Style.Text.Text.ListItemSubText" android:layout_weight="1" android:gravity="center_vertical"/>
   </LinearLayout>

     
