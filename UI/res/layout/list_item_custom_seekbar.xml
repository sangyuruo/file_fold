       android:textSize="14dip" android:layout_centerVertical="true" android:layout_marginLeft="10dip"/>
    <com.billionav.navi.component.bottombar.ProgressBarNavi
        android:id="@+id/list_Item_Custom_SeekBar_seekbar"
