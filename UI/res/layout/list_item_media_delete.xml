<?xml version="1.0" encoding="utf-8"?>
<com.billionav.navi.component.listcomponent.MultiChoiceLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="67dip"
    android:layout_gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/list_selector_background"
    android:gravity="center_vertical" >
      <ImageView
        android:id="@+id/delete_image"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:layout_marginRight="5dip"
        android:layout_marginLeft="10dip" android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/linearlayour01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/delete_image"
        android:orientation="vertical"
        android:paddingLeft="10dip" android:layout_centerVertical="true">

        <TextView
            android:id="@+id/delete_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF080808"
            
            android:textSize="14dip" />
        <TextView
       		android:layout_marginTop="13dip"
            android:id="@+id/delete_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:textColor="#FF336699"
            android:textSize="14dip" />
    </LinearLayout>

     
</com.billionav.navi.component.listcomponent.MultiChoiceLayout>