<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dip"
    android:layout_gravity="center_vertical"
    android:layout_marginRight="5dip"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical" >
      <ImageView
        android:id="@+id/list_Item_Media_Operate_image02"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:layout_marginLeft="14dip" android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/list_Item_Media_Operate_Linearlayour01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_Item_Media_Operate_image02"
        android:orientation="vertical"
        android:paddingLeft="10dip" android:layout_centerVertical="true">

        <TextView
            android:id="@+id/list_Item_Media_Operate_text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF080808"
            
            android:textSize="14dip" />
        <TextView
        	android:layout_marginTop="13dip"
            android:id="@+id/list_Item_Media_Operate_text02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:textColor="#FF336699"
            android:textSize="14dip" />
    </LinearLayout>

    
    <LinearLayout 
        android:id="@+id/layout_right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="14dip">
       
      <Button
        android:id="@+id/list_Item_Media_Operate_image03"
        android:layout_width="89dip"
        android:layout_height="22dip"
        android:textSize="14dip"
        android:focusable="false"
        android:textColor="@color/white"
        android:layout_marginRight="5dip"/>
      
         <ProgressBar
        android:id="@+id/list_Item_Media_Operate_image_progressbar"
        android:layout_width="22dip"
        android:layout_height="22dip"
        android:focusable="false"
        android:visibility="visible" android:layout_gravity="center_horizontal" android:layout_marginTop="4dip"/>
     </LinearLayout>
     <ImageView
         android:id="@+id/uploaded"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/navicloud_and_594a"
         android:layout_alignParentRight="true" 
         android:layout_centerVertical="true" 
         android:layout_marginRight="24dip"/>
</RelativeLayout>