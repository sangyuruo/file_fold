<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView android:layout_width="wrap_content"
		android:layout_height="50dp" android:id="@+id/textView1"
		android:layout_marginLeft="30px"
		android:gravity="center_vertical"
    	style="@style/Style.Text.Text.ListItemText"
		android:text="street" android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" android:layout_toLeftOf="@+id/textView2"></TextView>
	<TextView android:layout_width="wrap_content"
		android:gravity="center_vertical"
		style="@style/Style.Text.Text.ListItemSubText"
		android:layout_height="50dp" android:id="@+id/textView2"
		android:text="meter" android:layout_alignParentTop="true"
		android:layout_alignParentRight="true" android:layout_marginRight="26dp"></TextView>

</RelativeLayout>
