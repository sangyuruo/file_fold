<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dip"
    android:orientation="horizontal" >
    
    <TextView android:id="@+id/list_txt01"
    	android:layout_height="wrap_content"
    	android:layout_width="74dip"
    	android:gravity="left|center_vertical"
    	android:layout_gravity="center_vertical"
    	android:layout_marginLeft="12dip"
    	 style="@style/Style.Text.Text.ListItemSubText"/>

   <TextView android:id="@+id/list_txt02"
    			android:gravity="center"
    			android:layout_gravity="center_vertical"
    			android:layout_weight="1"    			
    			 android:layout_width="match_parent"
    			 android:layout_height="wrap_content" style="@style/Style.Text.Text.ListItemText"/>
	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="96dip" android:layout_marginRight="12dip">
		<ImageView android:id="@+id/list_compare_result_arror"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_height="28dip" android:layout_width="28dip"
			android:src="@drawable/navicloud_and_534a" />
		<TextView android:id="@+id/list_txt03" android:layout_height="match_parent"
			android:layout_width="66.6dip" android:layout_toLeftOf="@id/list_compare_result_arror"
			android:layout_centerVertical="true"
			android:layout_marginRight="5dp"
			android:gravity="right|center_vertical" style="@style/Style.Text.Text.ListItemSubText"/>
	</RelativeLayout>
</LinearLayout>
