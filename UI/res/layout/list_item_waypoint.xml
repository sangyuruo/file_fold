<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_background" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/li_wp_turningicon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:scaleType="center"
        android:background="@drawable/navicloud_and_470a"/>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="8dp"
	    android:layout_toRightOf="@id/li_wp_turningicon"
	    android:paddingBottom="12dp"
	    android:paddingTop="10dp" >

	    <TextView
	        android:id="@+id/li_wp_detail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="5dip"
	        android:text="TextView"
	        android:textColor="#000000"
	        android:textSize="16dip" />
	
	    <TextView
	        android:id="@+id/li_wp_distance"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/li_wp_detail"
	        android:layout_marginRight="4dip"
	        android:ellipsize="end"
	        android:text="TextView"
	        android:textColor="#8f8989"
	        android:textSize="12dip" />

	</RelativeLayout>
	
</RelativeLayout>

	
