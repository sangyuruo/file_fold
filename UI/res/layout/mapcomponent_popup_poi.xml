<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="250dip"
            android:layout_height="80dip">
 	<ImageView android:id="@+id/mapcomponent_Popup_Poi_nail"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:src="@drawable/navicloud_and_008a"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		/>
		
    <LinearLayout
       android:id="@+id/relativeLayout1"
       android:layout_width="wrap_content"
       android:layout_above="@+id/mapcomponent_Popup_Poi_nail"
       android:layout_marginBottom="-15dip"
       android:background="@drawable/navicloud_and_731a" android:layout_centerHorizontal="true"  android:layout_height="wrap_content">


        <TextView
            android:id="@+id/mapcomponent_Popup_Poi_textview01"
            android:layout_height="34dip"
            android:singleLine="true"
            android:text="Loading..."
            android:layout_marginTop="5dip"
            android:maxWidth="200dip"
            android:textSize="16dip" android:layout_width="wrap_content"  android:textColor="#FFF6F6F6" android:paddingLeft="16dip" android:paddingRight="16dip" android:ellipsize="end" />
 			<ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/navicloud_and_730a"/>
            
        <ImageView
            android:id="@+id/mapcomponent_Popup_Poi_imagebutton01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:src="@drawable/navicloud_and_569a" android:scaleType="center" android:layout_alignParentRight="true" />
	</LinearLayout>
        
</RelativeLayout>