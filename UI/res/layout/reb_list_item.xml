<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dip" >

    <ImageView
        android:id="@+id/reb_li_route_icon"
        android:layout_width="30dip"
        android:layout_height="30dip" android:layout_gravity="center_vertical" android:layout_marginLeft="12dip" android:layout_centerVertical="true"/>


    <ImageView
        android:id="@+id/reb_li_delete"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:src="@drawable/navicloud_and_205a" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:visibility="visible" android:layout_marginRight="5dip" android:scaleType="center" android:background="@xml/button_common_selected_06"/>
     <ImageView
        android:id="@+id/reb_li_search_icon"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:layout_toLeftOf="@+id/reb_li_delete"
        android:src="@drawable/navicloud_and_204a" android:layout_centerVertical="true" android:visibility="visible" android:layout_marginRight="5dip" android:scaleType="center" android:background="@xml/button_common_selected_06"/>
     
    <TextView
    	android:layout_marginLeft="15dip"
        android:id="@+id/reb_li_name"
        android:layout_height="match_parent"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_marginRight="5dip"
        android:ellipsize="end"
        android:gravity="left|center"
        android:lines="1"
       	android:paddingRight="2dip"
       	android:paddingLeft="2dip"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/light_blue"
        android:textSize="@dimen/font_size_01"
        android:layout_toLeftOf="@+id/reb_li_search_icon"
        android:background="@drawable/navicloud_and_513a"
        android:layout_width="match_parent"  android:layout_toRightOf="@id/reb_li_route_icon"/>



</RelativeLayout>