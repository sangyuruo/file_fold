<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/navicloud_and_749a" >
  
    <ListView
        android:id="@+id/reb_touchlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/dark_blue"
        android:dividerHeight="1px">

    </ListView>
    
    <ImageView 
        android:id="@+id/reb_dividenline"    
    	android:layout_below="@id/reb_touchlist"
    	android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:background="@color/dark_blue"/>
  
    <LinearLayout
        android:id="@+id/reb_bottom_area"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@id/reb_dividenline"
        android:background="@drawable/navicloud_and_721a"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/routeeditbroaddrive_swapimage"
            android:layout_width="42dip"
            android:layout_height="42dip"
            android:layout_marginLeft="6dip"
            android:src="@drawable/navicloud_and_016a"
            android:background="@xml/button_common_selected_06"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/routeeditbroaddrive_addimage"
            android:layout_width="match_parent"
            android:layout_height="42dip"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="3dip"
            android:layout_weight="4"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/routeeditbroaddrive_exchangeimage"
            android:layout_width="match_parent"
            android:layout_height="42dip"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="6dip"
            android:layout_weight="4"
            android:layout_gravity="center"/>

    </LinearLayout>




</RelativeLayout>