<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent" android:layout_width="match_parent"
	android:id="@+id/scroll">
	<LinearLayout android:layout_height="match_parent"
		android:layout_width="match_parent" android:orientation="vertical"
		android:id="@+id/eco_info_linear">

		<include layout="@layout/scr_eco_info_header"
			android:layout_weight="4" />

		<RelativeLayout android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<TextView android:id="@+id/list_title"
			android:background="@drawable/navicloud_and_661a"
				android:layout_height="41.3dip" android:layout_width="match_parent"
				android:gravity="left|center_vertical" 
				android:text="@string/STR_MM_10_02_01_04"
				android:layout_alignParentLeft="true" android:layout_centerVertical="true"
				android:paddingLeft="12dp" android:layout_alignParentTop="true" style="@style/Style.Text.Text.ListItemSubText"/>
			<com.billionav.navi.component.listcomponent.ListViewNavi
				android:orientation="vertical" android:layout_below="@id/list_title"
				android:layout_height="wrap_content" android:layout_width="match_parent"
				android:id="@+id/eco_list" android:layout_weight="6"
				android:drawSelectorOnTop="false">
			</com.billionav.navi.component.listcomponent.ListViewNavi>
		</RelativeLayout>
	</LinearLayout>
</RelativeLayout>