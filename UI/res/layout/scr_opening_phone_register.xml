<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical">
    <TableLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:collapseColumns="3" android:stretchColumns="1">
    	<TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
    	<TextView android:text="TelNo." android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    	<EditText android:id="@+id/tel_no" android:layout_height="wrap_content" android:layout_width="fill_parent"/>
		</TableRow>
    </TableLayout>
    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="send verified code"/>
</LinearLayout>
