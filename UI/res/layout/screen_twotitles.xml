<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">
        <TextView style="?android:attr/windowTitleStyle"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" android:id="@+id/titleleft" android:gravity="center_vertical" android:text="left" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView style="?android:attr/windowTitleStyle"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" android:id="@+id/titleright" android:gravity="center_vertical" android:text="right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
