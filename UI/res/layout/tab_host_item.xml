<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabhostitem_control_layout" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:padding="2dip" >	
	<LinearLayout android:layout_height="match_parent"
		android:layout_width="wrap_content" android:layout_centerInParent="true"
		>
		<ImageView android:id="@+id/tab_host_item_img"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"></ImageView>
		<TextView android:id="@+id/tab_host_item_text"
			android:layout_width="wrap_content" android:layout_height="match_parent" android:gravity="center_vertical"
			style="@style/Style.Text.Text.TabText"
			></TextView>
	</LinearLayout>
</RelativeLayout>

