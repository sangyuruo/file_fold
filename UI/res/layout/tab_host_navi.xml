<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent" android:layout_height="wrap_content">
<LinearLayout
	android:orientation="horizontal"
	android:id="@+id/tab_host_navi_item_layout" 
	android:layout_width="match_parent" android:layout_height="41dip" android:paddingLeft="3dip" android:paddingRight="3dip">

    <ImageView
        android:id="@+id/reb_left_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/reb_mid_icon"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/reb_right_icon"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:layout_weight="1" />

    

</LinearLayout>
<RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tab_host_navi_context_layout" android:paddingLeft="3dip" android:paddingRight="3dip"></RelativeLayout>
</LinearLayout>
