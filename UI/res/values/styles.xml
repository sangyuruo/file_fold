<resources>
    <style name="Widget" parent = "android:style/Widget">
    </style>
        
    <style name="Widget.CompoundButton" parent = "android:style/Widget.CompoundButton">
    </style>
    
    <style name="Widget.CompoundButton.CheckBox" parent="android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check</item>
    </style>
     <style name="Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio</item>
    </style>
    
    <style name="Widget.ListView" parent="android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_background</item>
        <item name="android:background">@drawable/navicloud_and_749a</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:divider">#00000000</item>
    </style>
    
    <style name="Widget.EditText" parent="android:style/Widget.EditText">
        <item name="android:background">@drawable/navicloud_and_513a</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:textColor">#FF0890CA</item>
    </style>
    
        <style name="Widget.GridView" parent="android:style/Widget.GridView">
        <item name="android:listSelector">@drawable/grid_selector_background</item>
    </style>
    <style name="Widget.Button" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">21dip</item>
    </style>
    <style name="Widget.ProgressBar" parent="android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_circle</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">34dip</item>
        <item name="android:maxWidth">34dip</item>
        <item name="android:minHeight">34dip</item>
        <item name="android:maxHeight">34dip</item>
	</style>
    
    
    <style name="Preference">
        <item name="android:layout">@layout/preference</item>
    </style>
    
    <style name="Preference.Category">
        <item name="android:layout">@layout/preference_category</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>
    
    <style name="Preference.CheckBoxPreference">
        <item name="android:widgetLayout">@layout/preference_widget_checkbox</item>
    </style>
    
    <style name="Preference.PreferenceScreen">
    </style>
    
    <style name="Preference.DialogPreference">
        <item name="android:positiveButtonText">@android:string/ok</item>
        <item name="android:negativeButtonText">@android:string/cancel</item>
        <!--  
        <item name="android:widgetLayout">@layout/preference_dialog</item>
        -->
    </style>    


	<style name="levelRatingBar" parent="@android:style/Widget.RatingBar">
		<item name="android:progressDrawable">@drawable/level_ratingbar_full</item>
		<item name="android:minHeight">16dip</item>
		<item name="android:maxHeight">16dip</item>
		<item name="android:isIndicator">true</item>
	</style>
	<style name="levelBigRatingBar" parent="@android:style/Widget.RatingBar">
		<item name="android:progressDrawable">@drawable/level_big_ratingbar_full</item>
		<item name="android:minHeight">44dip</item>
		<item name="android:maxHeight">44dip</item>
		<item name="android:isIndicator">true</item>
	</style>

	<!-- for 22px back -->
